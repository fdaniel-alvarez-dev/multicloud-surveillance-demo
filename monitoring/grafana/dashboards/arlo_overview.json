{
  "id": null,
  "title": "Arlo Resilience Overview",
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "panels": [
    {
      "type": "timeseries",
      "title": "Request Latency by Cluster",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus-primary"
      },
      "gridPos": { "h": 9, "w": 12, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{app=\"arlo-demo-app\"}[5m])) by (le, cluster))",
          "legendFormat": "{{cluster}} p95",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        },
        "overrides": []
      }
    },
    {
      "type": "timeseries",
      "title": "Error Rate",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus-primary"
      },
      "gridPos": { "h": 9, "w": 12, "x": 12, "y": 0 },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{app=\"arlo-demo-app\",status=~\"5..\"}[5m])) by (cluster) / sum(rate(http_requests_total{app=\"arlo-demo-app\"}[5m])) by (cluster)",
          "legendFormat": "{{cluster}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "min": 0,
          "max": 1
        },
        "overrides": []
      }
    },
    {
      "type": "stat",
      "title": "Active Routing Target",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus-primary"
      },
      "gridPos": { "h": 5, "w": 6, "x": 0, "y": 9 },
      "targets": [
        {
          "expr": "max(route53_healthcheck_status{check=\"api.arlo-resilience.com\"})",
          "legendFormat": "AWS",
          "refId": "A"
        },
        {
          "expr": "max(cloud_dns_health_status{record=\"api.gcp.arlo-resilience.com\"})",
          "legendFormat": "GCP",
          "refId": "B"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "DynamoDB Replication Lag",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus-primary"
      },
      "gridPos": { "h": 9, "w": 12, "x": 6, "y": 9 },
      "targets": [
        {
          "expr": "avg(dynamodb_replication_lag{table=\"arlo-global-sessions\"}) by (region)",
          "legendFormat": "{{region}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        },
        "overrides": []
      }
    },
    {
      "type": "timeseries",
      "title": "Failover Events",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus-primary"
      },
      "gridPos": { "h": 9, "w": 12, "x": 0, "y": 14 },
      "targets": [
        {
          "expr": "increase(route53_healthcheck_status{check=\"api.arlo-resilience.com\"}[1h])",
          "legendFormat": "AWS",
          "refId": "A"
        },
        {
          "expr": "increase(cloud_dns_health_status{record=\"api.gcp.arlo-resilience.com\"}[1h])",
          "legendFormat": "GCP",
          "refId": "B"
        }
      ]
    }
  ]
}
